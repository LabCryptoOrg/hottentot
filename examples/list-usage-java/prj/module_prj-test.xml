<?xml version="1.0" encoding="UTF-8"?>
<project name="module_prj-test" default="compile.module.prj-test">
  <dirname property="module.prj-test.basedir" file="${ant.file.module_prj-test}"/>
  
  <property name="module.jdk.home.prj-test" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.prj-test" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.prj-test" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.prj-test" value="-encoding UTF-8 -source 1.7 ${compiler.args}"/>
  
  <property name="prj-test.output.dir" value="${module.prj-test.basedir}/out/production/prj-test"/>
  <property name="prj-test.testoutput.dir" value="${module.prj-test.basedir}/out/test/prj-test"/>
  
  <path id="prj-test.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="prj-test.module.production.classpath">
    <path refid="${module.jdk.classpath.prj-test}"/>
    <path refid="library.hot.classpath"/>
  </path>
  
  <path id="prj-test.runtime.production.module.classpath">
    <pathelement location="${prj-test.output.dir}"/>
    <path refid="library.hot.classpath"/>
  </path>
  
  <path id="prj-test.module.classpath">
    <path refid="${module.jdk.classpath.prj-test}"/>
    <pathelement location="${prj-test.output.dir}"/>
    <path refid="library.hot.classpath"/>
  </path>
  
  <path id="prj-test.runtime.module.classpath">
    <pathelement location="${prj-test.testoutput.dir}"/>
    <pathelement location="${prj-test.output.dir}"/>
    <path refid="library.hot.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.prj-test">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.prj-test">
    <patternset refid="excluded.from.module.prj-test"/>
  </patternset>
  
  <path id="prj-test.module.sourcepath">
    <dirset dir="${module.prj-test.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.prj-test" depends="compile.module.prj-test.production,compile.module.prj-test.tests" description="Compile module prj-test"/>
  
  <target name="compile.module.prj-test.production" depends="register.custom.compilers" description="Compile module prj-test; production classes">
    <mkdir dir="${prj-test.output.dir}"/>
    <javac2 destdir="${prj-test.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.prj-test}/javac">
      <compilerarg line="${compiler.args.prj-test}"/>
      <bootclasspath refid="prj-test.module.bootclasspath"/>
      <classpath refid="prj-test.module.production.classpath"/>
      <src refid="prj-test.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.prj-test"/>
    </javac2>
    
    <copy todir="${prj-test.output.dir}">
      <fileset dir="${module.prj-test.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.prj-test.tests" depends="register.custom.compilers,compile.module.prj-test.production" description="compile module prj-test; test classes" unless="skip.tests"/>
  
  <target name="clean.module.prj-test" description="cleanup module">
    <delete dir="${prj-test.output.dir}"/>
    <delete dir="${prj-test.testoutput.dir}"/>
  </target>
</project>